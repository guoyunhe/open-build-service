        = link_to(new_project_path(name: User.session!.home_project_name), class: 'dropdown-item') do
          Create Your Home Project
      .dropdown-divider
      .dropdown-header Watchlist
      - if User.session!.watched_project_names.empty?
        .dropdown-item Empty
      - User.session!.watched_project_names.each do |project|
        = link_to project_show_path(project), class: 'dropdown-item' do
          #{project}
      .dropdown-divider
    = link_to(projects_path, class: 'dropdown-item') do
      All Projects

